@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="ui middle aligned center aligned grid">
    <div class="column">
        <h2 class="ui teal image header">
            <img src="../images/logo.png" class="image">
            <div class="content">
                Register
            </div>
        </h2>
        <form asp-controller="Account" asp-action="Register" method="post" class="ui large form validate-me" role="form">
            <div class="ui stacked segment">
                <div class="field">
                    <div class="ui left icon input">
                        <i class="user icon"></i>
                        <input asp-for="Email" placeholder="E-mail address">
                    </div>
                </div>
                <div class="field">
                    <div class="ui left icon input">
                        <i class="lock icon"></i>
                        <input asp-for="Password" type="password" placeholder="Password">
                    </div>
                </div>
                <div class="field">
                    <div class="ui left icon input">
                        <i class="lock icon"></i>
                        <input asp-for="ConfirmPassword" type="password" placeholder="Confirm password">
                    </div>
                </div>
                <button type="submit" class="ui fluid large teal button">Register</button>
            </div>

            <div asp-validation-summary="ValidationSummary.All" class="ui error message"></div>

        </form>

        <div class="ui message">
            Already a member? <a asp-controller="Account" asp-action="Login">Login</a>
        </div>
    </div>
</div>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
